{% extends 'base.html.twig' %}

{% block title %}Work Experience{% endblock %}

{% block body %}

<div class="container table-responsive py-5">

    <h1>Work Experience</h1>

    <table class="table table-bordered table-hover">
        <tbody>
            <tr>
                <th scope="row">Id</th>
                <td>{{ work_experience.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ work_experience.title }}</td>
            </tr>
            <tr>
                <th>Business</th>
                <td>{{ work_experience.business }}</td>
            </tr>
            <tr>
                <th>Start date</th>
                <td>{{ work_experience.startDate ? work_experience.startDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>End date</th>
                <td>{{ work_experience.endDate ? work_experience.endDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ work_experience.description }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_work_experience_index') }}">back to list</a>

    <a href="{{ path('app_work_experience_edit', {'id': work_experience.id}) }}">edit</a>

    {{ include('work_experience/_delete_form.html.twig') }}

</div>
{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('styles/project/homepage/index.css') }}">
{% endblock %}
{% block importmap %}
    {{ importmap(['app_homepage', 'app_contact_us']) }}
{% endblock %}
