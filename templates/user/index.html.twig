{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1>User index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Firstname</th>
                <th>Surname</th>
                <th>JobTitle</th>
                <th>Location</th>
                <th>Linkedin</th>
                <th>Github</th>
                <th>Website</th>
                <th>Email</th>
                <th>AboutMe</th>
                <th>Philosophy</th>
                <th>CreatedAt</th>
                <th>LastUpdatedAt</th>
                <th>Roles</th>
                <th>Password</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.firstname }}</td>
                <td>{{ user.surname }}</td>
                <td>{{ user.jobTitle }}</td>
                <td>{{ user.location }}</td>
                <td>{{ user.linkedin }}</td>
                <td>{{ user.github }}</td>
                <td>{{ user.website }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.aboutMe }}</td>
                <td>{{ user.philosophy }}</td>
                <td>{{ user.createdAt ? user.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ user.lastUpdatedAt ? user.lastUpdatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>{{ user.password }}</td>
                <td>
                    <a href="{{ path('app_user_show', {'id': user.id}) }}">show</a>
                    <a href="{{ path('app_user_edit', {'id': user.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="16">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_user_new') }}">Create new</a>
{% endblock %}
